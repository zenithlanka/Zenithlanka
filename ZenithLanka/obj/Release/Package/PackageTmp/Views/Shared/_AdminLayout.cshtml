        function readCookie(name) {
            var nameEQ = name + "=";
            var ca = document.cookie.split(';');
            for(var i=0;i < ca.length;i++) {
                var c = ca[i];
                while (c.charAt(0)==' ') c = c.substring(1,c.length);
                if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
            }
            return null;
        }
    </script>
    <script>
        var today = new Date();
        var expiry = new Date(today.getTime() + 1000 * 24 * 3600 * 1000); // plus 30 days

        function setCookie(name, value)
        {
            document.cookie=name + "=" + escape(value) + "; path=/; expires=" + expiry.toGMTString();
        }
        //alert(value);
        var value = readCookie('age');

        if(value== null){
            setCookie("age", "initial");
        }
        function age(){

            var strUser = document.querySelector('input[name=age]:checked').value;


            var strUser1 = document.querySelector('input[name=cage]:checked').value;

            setCookie("age", strUser);
            setCookie("language", strUser1);

            window.location = window.location.href.split("?")[0];
        }

    </script>
