<script>

        var today = new Date();
        var expiry = new Date(today.getTime() + 1000 * 24 * 3600 * 1000); // plus 30 days

        function setCookie(name, value) {
            document.cookie = name + "=" + escape(value) + "; path=/; expires=" + expiry.toGMTString();
        }
        function readCookie(name) {
            var nameEQ = name + "=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1, c.length);
                if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
            }
            return null;
        }

        function changesinhala() {
            setCookie("language", "sinhala");
        }
        function changeenglish() {
            setCookie("language", "english");
        }
        function changetamil() {
            setCookie("language", "tamil");
        }

        var languageparameter = getParameterByName('Language');

        if (languageparameter == "Sinhala" || value == null) {
            setCookie("language", "sinhala");
            location.href = "@Url.Action("ReadPost", "Sinhala")/@Model.PostId";
        }
        if (languageparameter == "Tamil") {

            setCookie("language", "tamil");
            location.href = "@Url.Action("ReadPost", "Tamil")/@Model.PostId";
        }
        if (languageparameter == "English" ) {
            setCookie("language", "english");
            location.href = "@Url.Action("ReadPost", "Home")/@Model.PostId";
        }

</script>


