@model IEnumerable<ZenithLanka.ViewModels.PostViewModel>

<div>
    @{
        foreach (var item in Model)
        {
            <div class="card pointer rounded bg-white  mb-3" onclick="redirect(@item.PostViewModelId)">
               <div class="card-header">
                    <div class="h4">
                        <b>@item.Title</b>
                    </div>
                </div>
                <div class="row no-gutters">
                    <div class="col-md-12">

                        <div>
                            <p class="card-text mb-0 p-2 indexpara">
                                @item.ShortDescription
                                - Read More <small>@item.PostDate | @item.Time</small>

                            </p>

                            <img src="@item.PreviewPhotoUrl" class="img-fluid" alt="@item.Title">
                        </div>
                    </div>
                </div>
            </div>

        }
    }
</div>
