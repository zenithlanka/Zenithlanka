@model ZenithLanka.Models.Author
@{
    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 py-3">
            <div class="card text-center">
                <img class="card-img-top" src="@Model.Photo" alt="@Model.Name">
                <div class="card-body">
                    <h1 class="card-title">@Model.Name</h1>
                    <div class="h4">@Model.Designation</div>
                    <div class="h5" href="@Model.Email">@Model.Email</div>
                    <a href="@Model.Twitter">Twitter</a> |
                    <a href="@Model.Facebook">Facebook</a>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
