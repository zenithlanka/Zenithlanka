@model IEnumerable<ZenithLanka.Models.Comment>
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-12">
            <div class="h4">Latest Comments</div>
            <ul class="timeline">
                @foreach (var item in Model)
                {
                    <li>
                       <div><b>@item.Name</b></div>
                        <p>@item.Description</p>
                    </li>

                }
                
                
            </ul>
        </div>
    </div>
</div>
