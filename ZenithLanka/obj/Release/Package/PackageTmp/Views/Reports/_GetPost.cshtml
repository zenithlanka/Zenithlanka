@model IEnumerable<ZenithLanka.ViewModels.ReportViewModel>

<div class="py-3 h4">Total number of views - <b>@ViewBag.Total</b></div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 pb-2">
            <div class="card">
                <img class="card-img-top" src="@item.PreviewPhotoUrl" alt="@item.Title">
                <div class="card-body">
                    <h4 class="card-title">@item.Title</h4>
                    <b>Number of views - @item.NoView</b>
                    <a href="@Url.Action("ReadPost","Home",new { id = item.PostId})" class="btn btn-primary btn-block mb-2 mt-3" target="_blank">See English post</a>
                    <a href="@Url.Action("ReadPost","Sinhala",new { id = item.PostId})" class="btn btn-primary btn-block mb-2" target="_blank">See Sinhala post</a>
                    <a href="@Url.Action("ReadPost","Tamil",new { id = item.PostId})" class="btn btn-primary btn-block mb-2" target="_blank">See Tamil post</a>
                </div>
            </div>
        </div>
    }
</div>