
@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
}


<div class="container mb-4">
    <div class="row py-3">
        <div class="col-md-4 mb-4">
            <button class="btn btn-block btn-primary" onclick="changesinhala()">සිංහල</button>
        </div>
        <div class="col-md-4 mb-4">
            <button class="btn btn-block btn-primary" onclick="changeenglish()">English</button>
        </div>
        <div class="col-md-4 mb-4">
            <button class="btn btn-block btn-primary" onclick="changetamil()">தமிழ்</button>
        </div>
    </div>
    <h1 class="h3 py-2">Reports</h1>
    <div class="row mt-3">
        <div class="col-md-6 pb-1">
            <label>Start Date</label>
            <input type="date" name="StartDate" class="form-control" id="startdate" />
        </div>
        <div class="col-md-6 pb-1">
            <label>End Date</label>
            <input type="date" name="EndDate" class="form-control" id="enddate" />
        </div>

    </div>
    <div class="col-md-4 pb-1 nopaddinglr">
        <button type="submit" class="btn btn-danger btn-block text-white mt-2" onclick="getreport()">Get Report</button>
    </div>
    <div id="ajaxreport"></div>

    <h2 class="h3 py-2 mt-3">Advertistment Reports</h2>
    <div class="row mt-3">
        <div class="col-md-6 pb-1">
            <label>Number</label>
            <input type="number" name="AdvertistmentId" class="form-control" id="advertistmentId" />
        </div>
    </div>
    <div class="col-md-4 pb-1 nopaddinglr">
        <button type="submit" class="btn btn-danger btn-block text-white mt-2" onclick="getadvertistmenreport()">Get Report</button>
    </div>
    <div id="ajaxadvertistmentreport"></div>
</div>

@section scripts{

    <script>
        function getreport() {
            $.ajax({
                url: '@Url.Action("GetPost", "Reports")',
                data: { "StarDate": $("#startdate").val(), "EndDate": $("#enddate").val()},
                type: 'GET',
                cache: false,
            }).done(function (result) {
                $('#ajaxreport').html(result);
            });
        }
    </script>
    <script>
    function getadvertistmenreport() {
            $.ajax({
                url: '@Url.Action("GetAdvertistment", "Reports")',
                data: { "id": $("#advertistmentId").val() },
                type: 'GET',
                cache: false,
            }).done(function (result) {
                $('#ajaxadvertistmentreport').html(result);
            });
        }
    </script>

}




