    function SuccessMessage() {
        alert("Done");
                loadattribute(@ViewBag.BarChartId)
            }
        function FailMessage() {
                alert("error");
            }
</script>
<script>
    function EditSuccessMessage() {
        alert("Done");
                loadattribute(@ViewBag.BarChartId)
            }
    function EditFailMessage() {
                alert("error");
            }
</script>
<script>
    function DeleteSuccessMessage() {
        alert("Done");
                loadattribute(@ViewBag.BarChartId)
            }
    function DeleteFailMessage() {
                alert("error");
            }
</script>

