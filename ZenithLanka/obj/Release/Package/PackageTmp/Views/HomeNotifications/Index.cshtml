@model IEnumerable<ZenithLanka.Models.HomeNotification>

@{
    ViewBag.Title = "Home Notification";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row pb-3">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-dark btn-block text-white" })
    </div>
    <div class="col-md-4"></div>
</div>
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-4">
        <div class="card border">
            <div class="card-body">

                <div class="pb-2">
                    Description - <b>@Html.DisplayFor(modelItem => item.Description)</b>
                </div>
                <div class="pb-2">
                    @Html.ActionLink("Edit", "Edit", new { id = item.HomeNotificationId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.HomeNotificationId })
                </div>
            </div>
        </div>
    </div>
    }
</div>

