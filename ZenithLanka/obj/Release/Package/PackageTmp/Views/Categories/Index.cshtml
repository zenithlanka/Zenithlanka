@model IEnumerable<ZenithLanka.Models.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row pb-3">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-dark btn-block text-white" })
    </div>
    <div class="col-md-4"></div>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card border">
                <div class="card-body">
                    <label>Sinhala Name</label> - <b>@Html.DisplayFor(modelItem => item.Name)</b><br />
                    <label>Tamil Name</label> - <b>@Html.DisplayFor(modelItem => item.TamilName)</b><br />
                    <label>English Name</label> - <b>@Html.DisplayFor(modelItem => item.EnglishName)</b><br />
                    <label>Active</label> - @Html.DisplayFor(modelItem => item.isActive)<br />
                    <label>Order</label> - @Html.DisplayFor(modelItem => item.Order)<br />
                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
                </div>
            </div>
        </div>
    }
</div>



