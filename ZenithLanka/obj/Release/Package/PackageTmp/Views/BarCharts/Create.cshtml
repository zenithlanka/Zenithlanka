@model ZenithLanka.Models.BarChart

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>BarChart</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group pt-3">
            <label class="control-label h5">
                @Html.EditorFor(model => model.isBarChart)
                @Html.ValidationMessageFor(model => model.isBarChart, "", new { @class = "text-danger" })
                Active BarChart
            </label>

        </div>
        <div class="form-group pt-3">
            <label class="control-label h5">
                @Html.EditorFor(model => model.isPieChart)
                @Html.ValidationMessageFor(model => model.isPieChart, "", new { @class = "text-danger" })
                Active isPieChart
            </label>

        </div>
        <div class="form-group pt-3">
            <label class="control-label h5">
                @Html.EditorFor(model => model.isLineChart)
                @Html.ValidationMessageFor(model => model.isLineChart, "", new { @class = "text-danger" })
                Active isLineChart
            </label>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PostId, "PostId", htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                <input type="number" name="PostId" value="@ViewBag.PostId" class="form-control" />
                @Html.ValidationMessageFor(model => model.PostId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
