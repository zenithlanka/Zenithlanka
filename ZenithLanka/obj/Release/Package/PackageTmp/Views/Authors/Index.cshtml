@model IEnumerable<ZenithLanka.Models.Author>

@{
    ViewBag.Title = "Authors";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row pb-3">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-dark btn-block text-white" })
    </div>
    <div class="col-md-4"></div>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card border">
                <div class="card-body">
                    <label>Author Id</label> - <b>@Html.DisplayFor(modelItem => item.AuthorId)</b><br />
                    <label>Name</label> - <b>@Html.DisplayFor(modelItem => item.Name)</b><br />
                    <label>English Name</label> - <b>@Html.DisplayFor(modelItem => item.EnglishName)</b><br />
                    <label>Designation</label> - <b>@Html.DisplayFor(modelItem => item.Designation)</b><br />
                    
                    @Html.ActionLink("Edit", "Edit", new { id = item.AuthorId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AuthorId })
                </div>
            </div>
        </div>
    }
</div>